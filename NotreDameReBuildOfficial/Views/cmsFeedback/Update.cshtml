@model NotreDameReBuildOfficial.Models.Feedback

@{
    ViewBag.Title = "Update Event";
    Layout = "~/Views/Shared/_LayoutCMS.cshtml";
    @Scripts.Render("~/Scripts/cms-menu.js");
    @Scripts.Render("~/bundles/jqueryui");

}

<h1>Update Record No. @Html.DisplayFor(model => model.feedback_id)</h1>


@using (Html.BeginForm())
{
    <table class="plain">
        <tr>
            <td>@Html.LabelFor(model => model.date)</td>
            <td>@Html.DisplayFor(model => model.date)</td>
        </tr>  
        <tr>
            <td><span style="color:red">*</span>@Html.LabelFor(model => model.name)</td>
            <td>@Html.TextBoxFor(model => model.name, new { @class = "fbname textbox" })</td>
        </tr>
            <tr>
            <td><span style="color:red">*</span>@Html.LabelFor(model => model.email)</td>
            <td>@Html.TextBoxFor(model => model.email, new { @class = "fbname textbox" })</td>
        </tr>
        <tr>
            <td><span style="color:red">*</span>
                @Html.LabelFor(model => model.category)</td>
            <td>@Html.DropDownListFor(model => model.category, new[] {
                new SelectListItem() {Text = "Compliment"},
                new SelectListItem() {Text = "Suggestion"},
                new SelectListItem() {Text = "Concern"},
                }, "- Select One -", new { @class = "dropdown-list" })
                @Html.ValidationMessageFor(model => model.category)</td>
        </tr>
        <tr>
            <td><span style="color:red">*</span>
                @Html.LabelFor(model => model.subject)</td>
            <td>@Html.TextBoxFor(model => model.subject, new { @class = "textbox" })
                @Html.ValidationMessageFor(model => model.subject)</td>
        </tr>
        <tr>
            <td><span style="color:red">*</span>
                @Html.LabelFor(model => model.comments)</td>
            <td>@Html.TextAreaFor(model => model.comments, new { @class = "textarea" })
                @Html.ValidationMessageFor(model => model.comments)</td>
        </tr>
        <tr>
            <td><span style="color:red">*</span>
                @Html.LabelFor(model => model.approved)
            </td>
            <td>@Html.RadioButtonFor(model => model.approved, 0) Pending
                @Html.RadioButtonFor(model => model.approved, 1) Approved</td>
        </tr>
    </table>

     <input type="submit" name="submit" value="Update" class="buttonstyle" />

    <a href='@Url.Action("Manage", "cmsFeedback")'><span class="buttonstyle">Cancel</span>
    </a>
    
}

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")

}