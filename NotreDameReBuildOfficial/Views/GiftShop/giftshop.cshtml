@{
    ViewBag.Title = "giftshop";
}

<h1>Gift Shop</h1>

<div class="cart"><a href="cart">Cart (@ViewBag.cartCount)</a></div>

<p>@ViewBag.Message</p>

@model IEnumerable<NotreDameReBuildOfficial.Models.product>
<div id="giftshoplist">
<ul>
    @foreach (var product in Model.OrderByDescending(x => x.Id))
    {
        <li><a href="@Url.Action("product_details", new { id = product.Id })"><img src="~/Images/Products/@Url.Content(product.image)" alt="@Html.Raw(product.name)" /></a></li>

        <li><a href="@Url.Action("product_details", new { id = product.Id })"><span>@Html.Raw(product.name)</span></a></li>

        using (Html.BeginForm(FormMethod.Post))
        {
            <li><span>Quantity:</span></li>
            <li><input type="number" name="product_quantity" min="1" max="100" value="1" /></li>

            <li><span>Price:</span></li>
            <li><span>$@Html.Raw(product.price)</span></li>
            <li><input type="hidden" value="@Html.Raw(product.name)" name="product_name" /></li>
            <li><input type="hidden" value="@Html.Raw(product.price)" name="product_price" /></li>
            <li><input type="submit" value="Add To Cart" class="buttonstyle" name="add_command" /></li>
        }

    }
</ul>
</div>