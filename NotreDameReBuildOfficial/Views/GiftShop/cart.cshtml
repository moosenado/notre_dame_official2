@model IEnumerable<NotreDameReBuildOfficial.Models.cart>
@{
    ViewBag.Title = "cart";
}

<h2>Cart</h2>

<p>@ViewBag.Message</p>

<table>
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>

    @foreach (var cart in Model)
    {
        <tr>
            <td>@Html.Raw(cart.name)</td>
            <td><input type="number" name="product_quantity" min="1" max="100" value="@Html.Raw(cart.prod_quantity)" /></td>
            <td>$@Html.Raw(cart.price)</td>
            <td>@using (Html.BeginForm(FormMethod.Post))
            {
                <input type="hidden" value="@Html.Raw(cart.Id)" name="product_id" />
                <input type="submit" value="Delete" class="buttonstyle" name="delete_command" />
            }
            </td>
        </tr>
    }

    </tbody>
</table>