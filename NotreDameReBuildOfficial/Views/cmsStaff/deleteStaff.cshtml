@model NotreDameReBuildOfficial.Models.staff_info

@{
    ViewBag.Title = "deleteStaff";
    Layout = "~/Views/Shared/_LayoutCMS.cshtml";
    @Scripts.Render("~/Scripts/cms-menu.js");
}

<h1>Delete Staff Member</h1>

<h2>Are you sure want to delete @Model.firstname @Model.lastname ?</h2>

@using(Html.BeginForm())
{
    <div>
        <input type="submit" value="Delete" /> <!-- Delete button -->
        <br />
        <br />
        @Html.ActionLink("Back", "staffList", new { id = Model.id })
        <!-- back button for user agin to go for employee details
        page -->
    </div>
}