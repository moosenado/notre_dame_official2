@model IEnumerable<NotreDameReBuildOfficial.Models.staff_info>
@{
    ViewBag.Title = "staffList";
    Layout = "~/Views/Shared/_LayoutCMS.cshtml";
    @Scripts.Render("~/Scripts/cms-menu.js");
}

<h1>Staff Directory</h1>
<h2>Staff List</h2>
<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Department</th>
            <th>View</th>
            <th>Update</th>
            <th>Delete</th>

        </tr>
    </thead>

    @foreach(var staff in Model)
    {
        <tr>
            <td>@staff.firstname</td>
            <td>@staff.lastname</td>
            <td>@staff.department</td>
            <td><a href='@Url.Action("staffInfo", "cmsStaff", new { id = staff.id })'><i class="fa fa-external-link-square fa-lg"></i></a></td>
            <td><a href='@Url.Action("UpdateStaff", "cmsStaff", new { id = staff.id })'><i class="fa fa-pencil fa-lg"></i></a></td>
            <td><a href='@Url.Action("deleteStaff", "cmsStaff", new { id = staff.id })'><i class="fa fa-trash-o fa-lg"></i></a></td>
        </tr>
    }

</table>

<br/>
<br/>
<a href='@Url.Action("InsertStaff", "cmsStaff")'>
    <span class="buttonstyle">+ Add Staff</span>
</a>
