@model IEnumerable<NotreDameReBuildOfficial.Models.staff_info>
@{
    ViewBag.Title = "staffList";
    Layout = "~/Views/Shared/_LayoutCMS.cshtml";
    @Scripts.Render("~/Scripts/cms-menu.js");
}

<h2>staffList</h2>

<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Department</th>
        </tr>
    </thead>

    @foreach(var staff in Model)
    {
        <tr>
            <td>@staff.firstname</td>
            <td>@staff.lastname</td>
            <td>@staff.department</td>
            <td>@Html.ActionLink("View", "staffInfo", new { id = staff.id }) /@Html.ActionLink("Update", "updateStaff", new { id = staff.id }) / @Html.ActionLink("Delete", "deleteStaff", new { id = staff.id })</td>
        </tr>
    }

</table>

<br/>
<br/>
<a href='@Url.Action("InsertStaff", "cmsStaff")'>
    <span class="buttonstyle">+ Add Staff</span>
</a>
