@model NotreDameReBuildOfficial.Models.createPage

@{
    ViewBag.Title = "pageData";

    Layout = "~/Views/Shared/_LayoutCMS.cshtml";
    @Scripts.Render("~/Scripts/cms-menu.js");
}

<h2>pageData</h2>

@using (Html.BeginForm())
{
    <table>

        <tr>
            <td>@Html.LabelFor(Model => Model.pageContent)</td>
            @*<td>@Html.TextAreaFor(Model => Model.pageContent)<span style="color:red">*</span></td>*@
            <td>
                @Html.TextAreaFor(Model => Model.pageContent, new { @id = "pageEditor" })
            </td>
        </tr>
</table>

    <input type="submit" value="Add Page Data" class="buttonstyle" />
    <a href='@Url.Action("pageList", "createPage")'>
        <span class="buttonstyle">Cancel</span>
    </a>
}
<script type="text/javascript">CKEDITOR.replace('pageEditor')</script>
@section Scripts
{
    @Scripts.Render("~/Scripts/ckeditor/ckeditor.js")
    @Scripts.Render("~/bundles/jqueryval")
}