@model NotreDameReBuildOfficial.Models.Event

@{
    ViewBag.Title = "Delete Event";
    Layout = "~/Views/Shared/_LayoutCMS.cshtml";
    @Scripts.Render("~/Scripts/cms-menu.js");
}

<div class="yes-no">

    <h2>Are you sure you want to delete <em>@Model.name</em>?</h2>

    @using (Html.BeginForm())
    {
        //"Yes" button that will trigger delete ActionResult
        <input type="submit" value="Yes" class="buttonstyle" />

        //"No" button that will return users to Index page
        @Html.ActionLink("No", "Manage", new { event_id = Model.event_id }, new { @class = "buttonstyle" })
    }

</div>