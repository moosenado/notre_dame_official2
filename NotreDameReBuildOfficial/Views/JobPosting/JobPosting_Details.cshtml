@model NotreDameReBuildOfficial.Models.jobPosting
@{
    ViewBag.Title = "JobPosting_Details";
   
}


<h2>@Model.title</h2>
<div>
    <div class="details_Op">
        @Html.LabelFor(model => model.title, new { @class = "lbl" }):
        @Html.DisplayFor(x => x.title)
    </div>
    <div class="details_Op">
        @Html.LabelFor(model => model.type, new { @class = "lbl" }):
        @Html.DisplayFor(x => x.type)
    </div>
    <div class="details_Op">
        @Html.LabelFor(model => model.department, new { @class = "lbl" }):
        @Html.DisplayFor(x => x.department)
    </div>
    <div class="details_Op">
        @Html.LabelFor(model => model.salary, new { @class = "lbl" }):
        @Html.DisplayFor(x => x.salary, "$")
    </div>
    <div class="details_Op">
        @Html.LabelFor(model => model.posting_date, new { @class = "lbl" }):
        @Html.DisplayFor(x => x.posting_date)
    </div>
    <div class="details_Op">
        @Html.LabelFor(model => model.catTitle, new { @class = "lbl" }):
        @Html.DisplayFor(x => x.catTitle)
    </div>
    <div class="details_Op">
        @Html.LabelFor(model => model.description, new { @class = "lbl" }):
        @Html.Raw(Model.description)
    </div>
    <br/>
   
    <div>
        @Html.ActionLink("Apply", "Insert_Applicant", "Applicant", new { id = Model.id }, new { @class = "buttonstyle" })
        @Html.ActionLink("Back", "JobPosting", null, new { @class = "buttonstyle" })
    </div>
    <br/><br/>

</div>
