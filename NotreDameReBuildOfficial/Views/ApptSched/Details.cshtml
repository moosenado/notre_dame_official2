@model NotreDameReBuildOfficial.Models.Appt_Book

@{
    ViewBag.Title = "Appointment Details";
    Layout = "~/Views/Shared/_LayoutCMS.cshtml";
    @Scripts.Render("~/Scripts/cms-menu.js");
}

<h2>Appointment Details For:</h2>

<h3>@Html.DisplayFor(x => x.Fname) @Html.DisplayFor(x => x.Lname)</h3>
<div class="clear"></div>

<table>
    <thead align="right">
    <tr><th>@Html.LabelFor(model => model.Email)</th><td>@Html.DisplayFor(x => x.Email)</td></tr>

    <tr><th>@Html.LabelFor(model => model.HealthNum)</th><td>@Html.DisplayFor(x => x.HealthNum)</td></tr>

    <tr><th>@Html.LabelFor(model => model.BookDate)</th><td>@Html.DisplayFor(x => x.BookDate)</td></tr>

    <tr><th>@Html.LabelFor(model => model.BookTime)</th><td>@Html.DisplayFor(x => x.BookTime)</td></tr>

    <tr><th>@Html.LabelFor(model => model.AdditionalInfo)</th><td>@Html.DisplayFor(x => x.AdditionalInfo)</td></tr>

    <tr><th>@Html.LabelFor(model => model.Tstamp)</th><td>@Html.DisplayFor(x => x.Tstamp)</td></tr>

    <tr><th>@Html.LabelFor(model => model.Speciality)</th><td>@Html.DisplayFor(x => x.Speciality)</td></tr>

    <tr><th>@Html.LabelFor(model => model.Phone)</th><td>@Html.DisplayFor(x => x.Phone)</td></tr>   
    </thead>
</table>

<p> @*renders links to methods located on ApptSchedController*@
    @Html.ActionLink("Back", "ApptSched") |
    @Html.ActionLink("Update", "Update", new { id = Model.id }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.id })
</p>