@model NotreDameReBuildOfficial.Models.role
@{
    ViewBag.Title = "Insert_role";
    Layout = "~/Views/Shared/_LayoutCMS.cshtml";
    @Scripts.Render("~/Scripts/cms-menu.js");
}
<br />
<br />
<br />

<h2 class="Title">Add New Role</h2>


@using (Html.BeginForm())
{
    <div class="details_lbl">
        @Html.LabelFor(model => model.title)
    </div>
    <br />
    <div>
        @Html.TextBoxFor(model => model.title, new { @class = "frm_insert" })
    </div>
    <div>
        @Html.ValidationMessageFor(model => model.title)
    </div>

    <div>
        <input id="btnAdd" type="submit" value="Add" class="btn-add" />
    </div>
}
<p>@Html.ActionLink("Back", "Roles", null, new { @class = "role_back" })</p>


